{
  "private": true,
  "type": "module",
  "scripts": {
    "format": "prettier --write \"**/*.+(js|jsx|json|html|css|less|scss|ts|tsx|svelte|yml|yaml|md|graphql|mdx)\" .",
    "lint:fix": "eslint --ignore-path .gitignore --fix --ext .js,.cjs,.ts,.tsx,.svelte .",
    "build": "pnpm --filter \"./packages/**\" build",
    "cs": "changeset && git add .changeset",
    "ci:version": "changeset version",
    "ci:publish": "changeset publish",
    "ci:publish2": "pnpm --filter \"./packages/**\" --no-git-checks publish",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=16",
    "pnpm": "^7.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.18.0",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "concurrently": "^7.2.2",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.2.6",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.7.0"
  }
}

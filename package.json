{
  "name": "make-me-a-cup-of-tea",
  "type": "module",
  "scripts": {
    "build": "pnpm build -r",
    "start": "concurrently --kill-others 'pnpm run watch --filter @make-me-a-cup-of-tea/observable' 'pnpm run watch --filter @make-me-a-cup-of-tea/utils'",
    "release": "pnpm publish --tag=next",
    "changeset:version": "changeset version && pnpm i --lockfile-only"
  },
  "engines": {
    "node": ">=14.18",
    "pnpm": "^6.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.18.0",
    "concurrently": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "prettier": "^2.4.1"
  }
}
{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm --filter \"./packages/**\" build",
    "start": "concurrently --kill-others 'pnpm run watch --filter @make-me-a-cup-of-tea/observable' 'pnpm run watch --filter @make-me-a-cup-of-tea/utils'",
    "cs": "changeset && git add .changeset",
    "ci:version": "changeset version",
    "ci:publish": "pnpm --filter \"./packages/**\" --no-git-checks publish"
  },
  "engines": {
    "node": ">=16",
    "pnpm": "^7.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.18.0",
    "concurrently": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "prettier": "^2.4.1"
  }
}